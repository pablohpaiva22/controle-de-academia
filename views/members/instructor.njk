{% extends "layout.njk" %}

{% block content %}

<div class="card card-content">

    <a class="new" href="/members/create">Novo</a>

    <table>
        <thead>
            <tr>
                <th>Membro</th>
                <th>E-mail</th>
                <th>Peso</th>
                <th>Altura</th>
                <th>Ver</th>
            </tr>
        </thead>

        <tbody>
            {% for member in members %}
            <tr>
                <td>
                    <span style="background: url({{member.avatar_url_}}) center center / cover"></span>
                    {{ member.nome_ }}
                </td>
                <td>{{ member.email_ }}</td>
                <td>{{ member.peso_ }}</td>
                <td>{{ member.altura_ }}</td>
                <td><a href="/members/{{ member.id }}">Ver</a></td>
            </tr>
            {% endfor %}
        </tbody>
    
    </table>

</div>

{% endblock content %}

