<div class="item">
    <div>Avatar_url</div>
    <div>
        <input 
            type="url" 
            name="avatar_url_"
            placeholder="https://"
            value="{{ found_instructor.avatar_url_ }}"
        >
    </div>
</div>

<div class="item">
    <div>Nome</div>
    <div>
        <input 
            type="text" 
            name="nome_"
            placeholder="Nome do instrutor"
            value="{{ found_instructor.instrutor_ }}"
        >            
    </div>
</div>

<div class="item">
    <div>E-mail</div>

    <div>
        <input 
            type="text" 
            name="email_"
            placeholder="example@example.com"
            value="{{ found_instructor.instrutor_ }}"
        >            
    </div>
</div>

<div class="item">
    <div>Data de nascimento</div>

    <div>
        <input 
            type="date" 
            name="data_de_nascimento" 
            value="{{ found_instructor.data_de_nascimento}}"
        >
    </div>
</div>

<div class="item">
    <div>Sexo</div>

    <div>
        <span>
            <input 
                type="radio" 
                name="sexo_" 
                value="M" 
                {% if found_instructor.sexo_ == "M" %}
                checked
                {% endif %}> Masculino
        </span>
        <span>
            <input 
                type="radio" 
                name="sexo_" 
                value="F" 
                {% if found_instructor.sexo_ == "F" %}
                checked 
                {% endif %}> Feminino
        </span>
    </div>
</div>

<div class="item">
    <div>Tipo Sangu√≠neo</div>

    <div class="blood-box">
        <select name="blood_">
            <option value="A"{ % if found_member.blood == "A" %} selected>A</option>
            <option value="A-"{ % if found_member.blood == "A-" %} selected>A-</option>
            <option value="B"{ % if found_member.blood == "B" %} selected>B</option>
            <option value="B-"{ % if found_member.blood == "B-" %} selected>B-</option>
            <option value="AB"{ % if found_member.blood == "AB" %} selected>AB</option>
            <option value="AB-"{ % if found_member.blood == "AB-" %} selected>AB-</option>
            <option value="O"{ % if found_member.blood == "O" %} selected>O</option>
            <option value="O-"{ % if found_member.blood == "O-" %} selected>O-</option>
        </select>
    </div>
</div>

<div class="item">
    <div>Peso (kg)</div>
    
    <div>
        <input 
            type="number" 
            name="peso_"
            value="{{ found_instructor.area_de_atuacao}}"
        >
    </div>
</div>

<div class="item">
    <div>Altura (metro)</div>

    <div>
        <input 
            type="text" 
            name="altura_"
            value="{{ found_instructor.area_de_atuacao}}"
        >
    </div>
</div>

<button type="submit">SALVAR</button>